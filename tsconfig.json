{
  "compilerOptions": {
    "noEmit": false,
    "typeRoots": ["./node_modules/@types", "./src/styles"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "module": "ESNext",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "strict": true,
    "importHelpers": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
